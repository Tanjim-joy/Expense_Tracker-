@model Expense01.Models.Categories

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-success">Create New Category</h2>
<div class="col-12">
    <div class="d-flex justify-content-end mb-1">
        @*<a asp-controller="User" asp-action="Create" class="btn btn-outline-success">Add New</a>*@
    </div>
    <form asp-controller="CatagoriesController" asp-action="index"> </form>
</div>
<form asp-action="Create" method="post" enctype="multipart/form-data" class="text-light lead">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.message</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CName"></label>
            </div>
            <div class="col-10">
                <input asp-for="CName" class="form-group" />
            </div>
            <span asp-validation-for="CName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-primary" value="Save" />
            <a asp-action="Index" class="btn btn-outline-secondary">Back To Index</a>
        </div>

    </div>

</form>